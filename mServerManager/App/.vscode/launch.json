    "version": "0.2.0",
    "configurations": [
        {
            "name": "Debug Algernon",
            "type": "lua-local",
            "request": "launch",
            "program":{
                "command": "${workspaceFolder}/algernon.exe"
            },
            "args": [
                "--httponly",
                "--server",
                "--autorefresh",
                "--conf ${workspaceFolder}/config/serverconf.lua",
                "--dir ${workspaceFolder}/public",
                "--boltdb=${workspaceFolder}/data/database.bolt"
            ]
        }
    ]
}